---
layout: base.njk
---

<div class="discipline-page">
  <h1 class="page-title">{{ title }}</h1>
  <p class="page-description">{{ description }}</p>

  <div class="content-grid">
    {% for type in ['prompts', 'rules', 'project-configs', 'workflow-states', 'resources'] %}
      {% set hasContent = discipline | hasContent(type) %}
      <section class="content-card {% if not hasContent %}content-empty{% endif %}">
        <div class="card-header">
          <h2>{{ type | replace('-', ' ') | title }}</h2>
          <span class="content-indicator" aria-label="{% if hasContent %}Contains content{% else %}No content{% endif %}"></span>
        </div>
        <p>{% if type === 'prompts' %}Browse and search through our collection of AI prompts
        {% elif type === 'rules' %}Explore rules for various workflows and development environments
        {% elif type === 'project-configs' %}Find project configuration examples and templates
        {% elif type === 'workflow-states' %}Learn about different workflow states and their implementations
        {% elif type === 'resources' %}Curated external resources, guides, and documentation for this discipline
        {% endif %} in {{ title }}.</p>
        <a href="{{ baseUrl }}/{{ discipline | lower }}/{{ type }}" class="button">View {{ type | replace('-', ' ') | title }}</a>
      </section>
    {% endfor %}
  </div>
</div>